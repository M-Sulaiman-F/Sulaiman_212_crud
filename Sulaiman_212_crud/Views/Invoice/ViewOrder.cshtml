@model IEnumerable<Sulaiman_212_crud.Models.OrderModel>

@{
    ViewData["Title"] = "View_Order";
    var total=0;
    var p_total = 0;
}

<h1>View Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @item.Price.ToString("F2")
            </td>
            <td>
                @{ p_total = item.Quantity * item.Price;}
                @p_total.ToString("F2")
                @{total += item.Quantity * item.Price;}
            </td>
            <td>
                <a asp-action="DeleteOrder" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<h2 style="margin-left:60%;margin-top:60px;">Total:@total.ToString("F2")</h2>

